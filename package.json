{
  "name": "datocms-plugin-select-conditional",
  "version": "0.0.1",
  "description": "Show/hide fields based on a dropdown field",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack --progress",
    "dev": "NODE_ENV=development webpack --progress --watch",
    "serve": "serve -p 5000 dist",
    "start": "concurrently \"npm run serve\" \"npm run dev\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "RJ Spiker - HashiCorp",
  "license": "ISC",
  "datoCmsPlugin": {
    "title": "Conditional (Select)",
    "entryPoint": "dist/index.html",
    "fieldTypes": [
      "json"
    ],
    "pluginType": "field_editor",
    "parameters": {
      "global": [
        {
          "id": "developmentMode",
          "label": "Development mode?",
          "type": "boolean",
          "hint": "Enable development logs on the console"
        }
      ],
      "instance": [
        {
          "id": "slaveFields",
          "label": "JSON object of fields that will be toggled based upon this field's value",
          "type": "json",
          "required": true,
          "hint": "Link to documentation here"
        }
      ]
    }
  },
  "dependencies": {
    "datocms-plugins-sdk": "0.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "babel-loader": "^8.0.4",
    "concurrently": "^4.0.1",
    "html-webpack-plugin": "^3.2.0",
    "prettier": "^1.15.2",
    "serve": "^10.1.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  }
}
